---
import HeaderLink from './HeaderLink.astro';
---

<header>
	<nav>
		<div class="internal-links flex items-stretch">
			<HeaderLink href="/">Home</HeaderLink>
			<HeaderLink href="/garden" className="relative inline-block text-left">Garden <svg class="-mr-1 size-5 text-gray-400" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true" data-slot="icon">
        <path fill-rule="evenodd" d="M5.22 8.22a.75.75 0 0 1 1.06 0L10 11.94l3.72-3.72a.75.75 0 1 1 1.06 1.06l-4.25 4.25a.75.75 0 0 1-1.06 0L5.22 9.28a.75.75 0 0 1 0-1.06Z" clip-rule="evenodd" />
      </svg></HeaderLink>
			<HeaderLink href="/about">About</HeaderLink>
		</div>
	</nav>
</header>
<style>
	header {
		margin: 0;
		padding: 0 1em;
		border: 1px solid rgba(134, 177, 23, 0.15);
	}

	nav {
		display: flex;
		align-items: center;
		justify-content: center;
	}
	nav a {
		padding: 1em 0.5em;
		color: var(--black);
		border-bottom: 4px solid transparent;
		text-decoration: none;
	}
  @keyframes linkAnimation {
  from {
    text-underline-offset: .4em;
  }

  to {
    text-underline-offset: -.4em;
  }
}
  nav a:hover {
    text-decoration-skip-ink: none;
    text-decoration-color: var(--primary-color);
    background-color: yellow !important;
    text-decoration-thickness: .1em;
    animation: .2s 1 forwards linkAnimation;
  }


	nav a.active {
		text-decoration: line-through;
    text-decoration-thickness: 3px;
    pointer-events: none;
    opacity: 80%;
	}
	.social-links,
	.social-links a {
		display: flex;
	}
	@media (max-width: 720px) {
		.social-links {
			display: none;
		}
	}
</style>

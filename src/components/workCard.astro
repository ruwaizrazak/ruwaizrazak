---
import FormattedDate from './FormattedDate.astro';
import SmallText from './mdxComponents/SmallText.astro';

interface Props {
  title: string;
  url: string;
  heroImage: string;
  company?: string;
  role?: string;
  year?: string;
}

const {
  title,
  url,
  heroImage,
  company,
  role,
  year
} = Astro.props;
---

<div>
  <a href={url} class="block rounded-lg overflow-hidden mt-5 bg-stone-50 p-5 border-1 border-stone-100 hover:bg-yellow-50">
    <div>
      <img src={heroImage} alt={title} class="h-48 object-contain transition-opacity case-study-image" />
      <div class="mt-5">
        <h3 class="font-medium text-syoro">{title}</h3>
        <div class="flex flex-col gap-1 mt-2">
          {company && <h3 class="text-3xl">{company}</h3>}
          {role && <p class="text-base">{role}</p>}
          {year && <p class="text-base">{year}</p>}
        </div>
      </div>
    </div>
  </a>
</div>
---
import FormattedDate from './FormattedDate.astro';
import Image from './mdxComponents/Image.astro';

import SmallText from './mdxComponents/SmallText.astro';
import H3 from './mdxComponents/H3.astro';


interface Props {
  title: string;
  url: string;
  heroImage: string;
  company: string;
  role?: string;
}

const {
  title,
  url,
  heroImage,
  company,
  role,
} = Astro.props;
---

<div class="case-study-card group mt-10 p-5 bg-gray-100 rounded-lg
  motion-safe:hover:scale-[1.02] motion-safe:active:scale-95
  motion-safe:transform-gpu motion-safe:transition-all">
  <a href={url} class="rounded-l overflow-hidden">
    <div class="motion-safe:transform-gpu motion-safe:transition-all motion-reduce:transition-none
      group-hover:-translate-y-1 group-active:translate-y-0">
      <img src={heroImage} alt={title} class="w-full aspect-video transition-opacity case-study-image m-0" />
      <div class="p-0 mt-5">
        <H3 class="text-xl font-bold mb-2">{title}</H3>
        <SmallText className="text-gray-600 text-sm block">
          {company} {role && `â€¢ ${role}`}
        </SmallText>
      </div>
    </div>
  </a>
</div>

<style>
  .case-study-card {
    transition: all 0.2s ease;
  }
  .case-study-card:hover .case-study-image {
    opacity: 0.8;
  }
</style>
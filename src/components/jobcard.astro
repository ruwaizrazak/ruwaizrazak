---

export interface Props {
  company: string;
  period: string;
  logo?: string;
  description?: string;
  role:string;
}

const {
  company,
  period,
  logo,
  role,
  description
} = Astro.props;
---
<div class="panel items-start p-7 flex flex-col sm:flex-row gap-5 bg-cardbg border border-card-border w-full lg:w-[700px] rounded-2xl">
    <img class="w-24 md:w-36 lg:w-48" src={logo} alt="company logo">
    <div class="item-start">
      <h2 class="text-2xl sm:text-3xl text-konpeki uppercase">{role} at {company}</h2>
      <p class="font-bold text-base text-konpeki uppercase font-sans">{period}</p>
      <div class="mt-5 text-lg text-syoro font-serif">
        {Astro.slots.default? <slot /> //checks whether the default slot content was passed or not
          : description}
      </div>
    </div>
</div>
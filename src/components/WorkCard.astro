---
// WorkCard.astro - Reusable card component for work items
export interface Props {
  title: string;
  period: string;
  heroImage?: string;
  imageAlt?: string;
  url: string;
}

const {
  title,
  period,
  heroImage,
  imageAlt = title,
  url
} = Astro.props;
---

<div class="group w-full">
  <a href={url} class="block overflow-hidden transition-all duration-300 hover:scale-95 rounded-lg border border-card-border bg-cardbg">
    <div class="transform-gpu transition-all duration-300 ease-out items-center justify-center">
      <div class="items-center justify-between flex">
        <img
          src={heroImage}
          alt={imageAlt}
          class="w-full h-auto p-5 object-cover rounded-b-none transition-all duration-300"
        />
      </div>
      <div class="mt-0 py-5 px-3 space-y-3 items-center justify-center text-center">
        <h3 class="text-lg md:text-xl lg:text-2xl font-medium text-konpeki group-hover:text-link font-serif mb-0 -mt-5">{title}</h3>
        <p class="text-base text-syoro uppercase mt-0">{period}</p>
      </div>
    </div>
  </a>
</div>
---
// WorkCard.astro - Reusable card component for work items
export interface Props {
  title: string;
  period: string;
  imageSrc: string;
  imageAlt?: string;
  url: string;
}

const {
  title,
  period,
  imageSrc,
  imageAlt = title,
  url
} = Astro.props;
---

<div class="group rounded-lg border-b-1 border-syoro">
  <a href={url} class="block overflow-hidden bg-cardbg transition-all duration-300
    hover:bg-yellow-50 hover:scale-98">
    <div class="transform-gpu transition-all duration-300 ease-out">
      <div class="overflow-hidden">
        <img
          src={imageSrc}
          alt={imageAlt}
          class="w-full h-48 object-cover rounded-b-none"
        />
      </div>
      <div class="mt-0 py-5 px-3 space-y-3">
        <h3 class="text-2xl lg:text-3xl font-semibold text-konpeki">{title}</h3>
        <p class="text-base text-syoro uppercase mt-0">{period}</p>
      </div>
    </div>
  </a>
</div>
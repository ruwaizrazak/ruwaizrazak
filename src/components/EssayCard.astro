---
import FormattedDate from './FormattedDate.astro';
import Image from './mdxComponents/Image.astro';
import Type from './type.astro';

interface Props {
  title: string;
  description: string;
  date: Date;
  url: string;
  heroImage?: string;
  imageClass?: string;
}

const { title, description, date, url, heroImage, imageClass = '' } = Astro.props;
---

<div class="essay-card">
  <a href={url} class="block rounded-lg overflow-hidden hover:shadow-lg transition-all bg-stone-100 hover:bg-yellow-50 p-5">
    {heroImage && (
      <div>
        <Image
          src={heroImage}
          alt={title}
          class={`w-full h-48 object-cover ${imageClass}`}
        />
      </div>
    )}
    <div class="p-4">
      <h3 class="text-xl font-bold mb-2 group-hover:text-blue-600 transition-colors">{title}</h3>
      <p class="text-gray-600 mb-3 line-clamp-2 text-sm">{description}</p>
      <div class="flex flex-row gap-4 flex-wrap text-sm items-start text-gray-500">
        <FormattedDate date={date} />
        <Type>Essay</Type>
      </div>
    </div>
  </a>
</div>

<style>
  .essay-card {
    transition: transform 0.2s ease;
  }
  .essay-card:hover {
    transform: translateY(-2px);
  }
</style>
---
import Link from './mdxComponents/Link.astro';
import GradientHeading from './mdxComponents/gradientHeading.astro';

const today = new Date();
const navLinks = [
  { title: 'Home', path: '/' },
  { title: 'Garden', path: '/garden' },
  { title: 'About', path: '/about' },
  { title: 'Essays', path: '/essays' },
  { title: 'Notes', path: '/notes' },
  { title: 'Series', path: '/series' },
  { title: 'Books', path: '/books' },
  { title: 'Live', path: '/live' },
];
---

<footer class="bg-backgroundcolor px-10 py-30 mt-10 border-t-2  border-stone-300">
  <nav class="mx-auto">
    <div class="flex flex-col md:flex-row w-full justify-between">
      <div class="flex flex-col w-full md:w-1/3">
        <GradientHeading size="md">Cacophony Of Thoughts</GradientHeading>
        <div class="flex flex-row py-5 gap-5 items-center">
          <a href="https://mastodon.social/@ruwaizrazak">
          <img src="/icons/mastodon.png" class="w-8 grayscale h-auto object-contain hover:filter-none hover:scale-[95%] transition-all duration-200" />
          </a>
          <a href="https://github.com/ruwaizrazak">
            <img src="/icons/github.png" class="w-9 grayscale h-auto object-contain hover:filter-none hover:scale-[95%] transition-all duration-200" />
            </a>
            <a href="https://bsky.app/profile/ruwaizrazak.bsky.social">
              <img src="/icons/bluesky.svg" class="w-9 grayscale h-auto object-contain hover:filter-none hover:scale-[95%] transition-all duration-200" />
              </a>

        </div>
      </div>
      <div class="w-full md:w-1/3 ">
        <div class="grid grid-cols-5 md:grid-cols-3 gap-3">
          {navLinks.slice(0, 3).map(link => (
            <Link href={link.path} class="text-xl hover:text-yellow-600 transition-colors">{link.title}</Link>
          ))}
          {navLinks.slice(3, 6).map(link => (
            <Link href={link.path} class="text-xl hover:text-yellow-600 transition-colors">{link.title}</Link>
          ))}
          {navLinks.slice(6, 8).map(link => (
            <Link href={link.path} class="text-xl hover:text-yellow-600 transition-colors">{link.title}</Link>
          ))}
        </div>
        
      </div>
      
    </div>
    <div class="text-sm text-center px-10 mt-5">
      &copy; {today.getFullYear()} Ruwaiz Razak. All rights reserved.
    </div>
    
  </nav>
 

</footer>

---
interface OverviewItem {
  title: string;
  content: string | string[];
  isList?: boolean;
}

interface Props {
  items: OverviewItem[];
}

const { items } = Astro.props;
import H3 from './H3.astro';
---

<div class="bg-gray-100 p-5 rounded-lg project-overview grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mt-8">
  {items.map((item) => (
    <div>
      <H3>{item.title}</H3>
      {item.isList ? (
        <ul>
          {(item.content as string[]).map((bullet) => (
            <li>{bullet}</li>
          ))}
        </ul>
      ) : (
        <p>{item.content}</p>
      )}
    </div>
  ))}
</div>

<style>
  .project-overview {
    position: relative;
    left: 50%;
    transform: translateX(-50%);
  }

  :global(.prose .project-overview) {
    max-width: none !important;
    width: 140%;
  }
</style>


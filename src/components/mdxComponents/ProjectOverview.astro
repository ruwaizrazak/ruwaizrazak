---
interface OverviewItem {
  title: string;
  content: string | string[];
  isList?: boolean;
}

interface Props {
  items: OverviewItem[];
}

const { items } = Astro.props;
---

<div class="bg-gray-100 p-5 rounded-xl w-full lg:w-[120%] lg:-mx-[10%] grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mt-8">
  {items.map((item) => (
    <div>
      <h3 class="underline underline-offset-5 decoration-gray-400">{item.title}</h3>
      {item.isList ? (
        <ul class="list-outside p-0">
          {(item.content as string[]).map((bullet) => (
            <li class="p-0">{bullet}</li>
          ))}
        </ul>
      ) : (
        <p>{item.content}</p>
      )}
    </div>
  ))}
</div>



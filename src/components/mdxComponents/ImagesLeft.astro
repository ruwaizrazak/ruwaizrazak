---
interface Props {
  imageSrc: string;
  alt?: string;
  children: any;
  imageWidth?: string;
}

const {
  imageSrc,
  alt = '',
  children,
  imageWidth = 'md:w-1/3'
} = Astro.props;
---

<div class="flex flex-col md:flex-row gap-6 my-8 items-center">
  <div class={imageWidth}>
    <img src={imageSrc} alt={alt} class="w-full rounded-lg">
  </div>
  <div class={`md:w-${imageWidth.includes('1/3') ? '2/3' : '1/2'} space-y-4 flex flex-col justify-center`}>
    <slot />
  </div>
</div>

<style>
  img {
    margin: 0;
    padding: 0;
  }

  :global(p) {
    margin-top: 0;
    margin-bottom: 1rem;
  }
</style>


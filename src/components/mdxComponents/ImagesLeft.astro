---
interface Props {
  imageSrc: string;
  alt?: string;
  children: any;
}

const { imageSrc, alt = '', children } = Astro.props;

---

<div class="flex flex-col md:flex-row items-center gap-6 my-8">
  <div class="md:w-1/2">
    <img src={imageSrc} alt={alt} class="w-full rounded-lg">
  </div>
  <div class="md:w-1/2 space-y-4">
    <slot />
  </div>
</div>

<style>
  img {
    margin: 0;
    padding: 0;
  }

  :global(p) {
    margin-top: 0;
    margin-bottom: 1rem;
  }
</style>


---
interface Props {
  imageSrc: string;
  alt?: string;
  children: any;
  imageWidth?: string;
}

const {
  imageSrc,
  alt = '',
  children,
  imageWidth = 'md:w-1/5'
} = Astro.props;
---

<div class="w-full lg:-mx-16 flex flex-col md:flex-row gap-6 my-8 items-center bg-stone-50 p-8 rounded-lg">
  <div class="{imageWidth} p-10">
    <img src={imageSrc} alt={alt} class="w-full rounded-lg p-0 m-0">
  </div>
  <div class={`md:w-${imageWidth.includes('1/3') ? '2/3' : '1/2'} space-y-4 flex flex-col justify-center`}>
    <slot />
  </div>
</div>



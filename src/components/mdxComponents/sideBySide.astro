---
interface SideItem {
  imageSrc: string;
  caption: string;
}

interface Props {
  leftItem: SideItem;
  rightItem: SideItem;
}

const { leftItem, rightItem } = Astro.props;
---

<div class="flex flex-col md:flex-row items-center gap-6 my-8">
  <div class="w-full md:w-1/2 p-4">
    <img
      src={leftItem.imageSrc}
      alt=""
      class="w-full max-w-lg rounded-lg mb-4"
    />
    <p class="text-stone-700 text-base md:text-lg">{leftItem.caption}</p>
  </div>
  <div class="w-full md:w-1/2 p-4">
    <img
      src={rightItem.imageSrc}
      alt=""
      class="w-full max-w-lg rounded-lg mb-4"
    />
    <p class="text-stone-700 text-base md:text-lg">{rightItem.caption}</p>
  </div>
</div>


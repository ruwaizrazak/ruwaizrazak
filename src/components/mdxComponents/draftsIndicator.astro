---
interface Props {
  imageSrc?: string;
  message?: string;
}

const { 
  imageSrc = "https://i.imgur.com/GRwJGSM.png",
  message = "The following portion of this document is a draft. There is a high probability that this will be modified in the near or far future"
} = Astro.props;
---

<div class="flex items-center justify-center bg-gray-50 w-full h-[350px]">
  <div class="flex flex-col items-center justify-center max-w-lg px-4">
    <img 
      src={imageSrc} 
      alt="Draft indicator" 
      class="h-[150px] w-[200px] object-contain p-3"
    />
    <p class="text-center text-gray-700 mt-4">
      {message}
    </p>
  </div>
</div>


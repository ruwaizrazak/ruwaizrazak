---
interface Props {
  label?: string;
  description: string;
}

const {
  label = "Targeted Audience",
  description
} = Astro.props;
---

<div class="flex items-center justify-center w-full bg-stone-50 p-6 rounded-lg">
  <div class="flex flex-col md:flex-row w-full max-w-4xl gap-4 md:gap-8">
    <div class="md:w-1/3">
      <p class="text-blue-600 font-bold text-lg">{label}</p>
    </div>
    <div class="md:w-2/3">
      <p class="text-stone-700 text-lg">{description}</p>
    </div>
  </div>
</div>


---
interface Props {
  className?: string;
}

const { className } = Astro.props;
---

<h3 class:list={[
  "font-semibold text-slate-700 text-base md:text-base lg:text-lg lg:mb-3 md:mb-2 mb-1 self-center",
  className
]}>
  <slot />
</h3>

<style>
  h3 {
    font-family: var(--font-serif);
  }
</style>
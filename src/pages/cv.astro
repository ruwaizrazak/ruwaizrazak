---
import BaseHead from '../components/BaseHead.astro';
import Button from '../components/Button.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import GradientHeading from '../components/mdxComponents/gradientHeading.astro';
---
<!doctype html>
<html lang="en">
  <head>
    <BaseHead title="Ruwaiz's CV" description="Portfolio of Ruwaiz Razak" />
  </head>
  <body>
    <Header />
    <main class="w-[90%] mx-auto">
      <div class="flex flex-col lg:flex-row items-start justify-between gap-8 lg:gap-0 py-8">
        <div class="w-full lg:w-2/3 xl:w-[80%] 2xl:w-[60%]  text-center lg:text-left">
          <GradientHeading size='xl' className='w-full'>
            Curious,
            Multidiciplinary
            Designer</GradientHeading>
          <p class="w-full md:w-[80%] mx-auto lg:mx-0 text-lg text-center lg:text-left sm:text-xl mt-4">
            Currently building something cool with Nordeus, Previously with Zynga and Glu.
          </p>
          <div class="flex-col mt-10">
            <Button href="mailto:hello@ruwaizrazak.com" variant='primary'>
                    Contact Me
                  </Button>
          </div>
        </div>
        <div class="w-full lg:w-1/3 flex justify-center lg:justify-end mb-6 lg:mb-0">
          <div class="relative w-2/3 sm:w-1/2 lg:w-full">
            <!-- Floating icons -->
            <img src="/about/figmalogo.png" alt="Sketch" class="absolute top-0 left-0 w-14 sm:w-16 lg:w-25" />
            <img src="/about/unitylogo.png" alt="Sketch" class="absolute top-4 right-0 w-14 sm:w-16 lg:w-25" />
            <img src="/about/sketchlogo.png" alt="Sketch" class="absolute top-44 left-0 w-14 sm:w-16 lg:w-25" />
            <img src="/about/sqllogo.png" alt="Sketch" class="absolute bottom-0 right-2 w-14 sm:w-16 lg:w-25" />
            <img src="/about/codinglogo.png" alt="Sketch" class="absolute top-40 right-2 w-14 sm:w-16 lg:w-20" />
            <!-- Main image -->
            <img src="/about/ruwaiz.png" class="relative w-full z-10" />
          </div>

        </div>
      </div>
    </main>
    <Footer />
  </body>
</html>

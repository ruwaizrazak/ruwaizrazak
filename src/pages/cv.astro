---
import { div, html } from 'motion/react-client';
import BaseHead from '../components/BaseHead.astro';
import Button from '../components/Button.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import GradientHeading from '../components/mdxComponents/gradientHeading.astro';
import ProfileCard from '../components/ProfileCard/ProfileCard.tsx';
import Jobcard from '../components/jobcard.astro';
import GradientLine from '../components/mdxComponents/gradientLine.astro';
import ToSinglePost from '../components/mdxComponents/ToSinglePost.astro';
---
<!doctype html>
<html lang="en">
  <head>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/gsap.min.js" defer></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/ScrollTrigger.min.js" defer></script>
    <BaseHead title="Ruwaiz's CV" description="Portfolio of Ruwaiz Razak" />
  </head>
  <body>
    <Header />
    <main class="w-full mx-auto text-syoro">
      <div class="w-[90%] mx-auto flex flex-col lg:flex-row items-start justify-between gap-8 lg:gap-0 mt-10 lg:my-30">
        <div class="w-full lg:w-2/3  md:items-end text-center lg:text-left mt-10 lg:-mt-10">
          <GradientHeading size='xl' className='w-full'>
            Curious,
            Multidiciplinary
            Designer</GradientHeading>
          <p class="w-full md:w-[80%] mx-auto lg:mx-0 text-lg text-center lg:text-left sm:text-xl mt-4">
            At the intersection of UX, systems thinking, and interactive development. I blend research, prototyping, and data-informed decisions to craft purposeful, user-centered experiences. <br><br>
            Currently building something cool with Nordeus, Previously with Zynga and Glu.
          </p>
          <div class="flex-col my-10 space-x-5">
            <Button href="mailto:hello@ruwaizrazak.com" variant='primary'>
              Mail Me
            </Button>
            <Button href="/ruwaizcv.pdf" target={'_blank'}>
              Download CV
            </Button>
          </div>
        </div>
        <div class="w-full lg:w-1/3 flex justify-center lg:justify-end mb-6 lg:mb-0">

        <ProfileCard
          client:load
          client:visible
           name="Ruwaiz Razak"
           title="Senior UX Designer"
           handle="ruwaizrazak"
           status=""
           contactText="Contact Me"
           avatarUrl="/about/ruwaiz.png"
           showUserInfo={true}
           enableTilt={true}
           enableMobileTilt={false}
           showBehindGradient={true}
           iconUrl='/about/iconpattern.png'
        />


        </div>
      </div>
          <div class="mx-auto bg-gray-200 horizontal-section py-20 relative overflow-hidden lg:min-h-[100vh] min-h-0">
            <div class="flex items-center gap-4 w-[90%] mx-auto mb-10">
            <GradientHeading size="lg" className='font-medium sm:whitespace-nowrap'>Career So Far</GradientHeading>
            <GradientLine angle={45} startPercentage={20} endPercentage={80} className="h-[60px] w-[80%]" direction='rtl'/>
          </div>
          <div class=" w-[90%] mx-auto lg:overflow-x-visible overflow-x-hidden">
            <div class="h-scroll-wrapper relative">
              <div class="h-scroll-content flex flex-col lg:flex-row gap-8 overflow-visible lg:w-max w-full lg:items-start items-center">
                <Jobcard
                  company="Nordeus"
                  role="Senior UX Designer"
                  period="2024–Present"
                  logo="./about/nordeus.png"
                  description="Building something cool with other Nordeans"
                />
                <Jobcard
                  company="Zynga"
                  role="Senior UX Designer"
                  period="2024–Present"
                  logo="./about/zynga.png">
                  <ul class="list-disc space-y-3 list-outside px-5">
                    <li>Improved New User Retention Rate significantly by optimizing onboarding.</li>
                    <li>Presented design proposals effectively to stakeholders and cross-functional teams.</li>
                    <li>Mentored intern and Associate UX designers nurturing growth.</li>
                    <li>Designed and validated hypotheses through A/B testing using KPIs</li>
                  </ul>
                  </Jobcard>
                  <Jobcard
                  company="Zynga"
                  role="UX Designer"
                  period="2021-2023"
                  logo="./about/zynga.png">
                  <ul class="list-disc space-y-3 list-outside px-5">
                    <li>Led Farmville 3 UX transition to Zynga India alongside another Senior UX.</li>
                    <li>Built multiple features for Farmville 3’s global launch to ensure user engagement.</li>
                    <li>Revamped Ad-watching experiences for players.</li>
                    <li>Streamlined design process by building design systems in Figma and Unity.</li>
                    <li>Actively built prefabs and assisted other ux designers in implementation and debugging</li>
                  </ul>
                  </Jobcard>
                  <Jobcard
                  company="Zynga"
                  role="Associate UX Designer"
                  period="2019-2021"
                  logo="/about/zynga.png">
                  <ul class="list-disc space-y-3 list-outside px-5">
                    <li>Designed features by conducting Competitive Analysis, UX Research and diverse design stages for Empires and Allies</li>
                    <li>Collaborated with PMs and Game Designers, to synchronize feature alignment with business needs.</li>
                    <li>Built Unity prefabs and translated figma designs and animations to prefabs and .anim files.</li>
                    <li>Directed Revenue KPIs and feature roadmaps as APM in 2021 Q1, under supervision.</li>
                  </ul>
                  </Jobcard>
                  <Jobcard
                  company="Glu Mobile"
                  role="Associate UX Designer"
                  period="2018-2019"
                  logo="./about/glu.png">
                  <ul class="list-disc space-y-3 list-outside px-5">
                    <li>Reduced churn and improved retention by conducting funnel analysis on user onboarding.</li>
                    <li>Designed and shipped multiple features using Agile, informed by user research and usability testing.</li>
                    <li>Created wireframes, prototypes, user flows, use cases, and defined VFX/SFX for features.</li>
                  </ul>
                  </Jobcard>
              </div>
            </div>
          </div>
          </div>
          <div class="w-[90%] mx-auto bg-white horizontal-section py-20 relative overflow-hidden lg:min-h-[100vh] min-h-0">
            <div class="flex items-center gap-4 mx-auto mb-10">
              <GradientHeading size="lg" className='font-medium sm:whitespace-nowrap'>Case study</GradientHeading>
              <GradientLine angle={45} startPercentage={20} endPercentage={80} className="h-[60px] w-[80%]" direction='rtl'/>
            </div>
            <div class="w-full md:w-[80%] lg:w-[50%]">
              <p class="text-xl">While I can’t share what I did at my previous companies, I can give a glimpse on my process and the project I worked on.</p>
            </div>
            <div class="bg-stone-50 rounded-xl p-5 mx-auto mt-10">
              <ToSinglePost
              title="Deer Hunter 2018"
              subtitle="ASSOCIATE USER EXPERIENCE DESIGNER"
              company="GLU"
              description="We built tournament systems to address the low engagement from elder users, after conducting multiple focus groups, market analysis, qualitative and quantitative surveys. Here is a sneak peek"
              imageSrc="/casestudies/DeerHunter2018.png"
              url="/works/deerhunter2018"
              />
            </div>
          </div>

    </main>
    <Footer />
  </body>
  <script>
import gsap from "gsap";
import type { ScrollTrigger } from "gsap/all";

  document.addEventListener("DOMContentLoaded", () => {
    if (window.matchMedia("(min-width: 1024px)").matches) {
      gsap.registerPlugin(ScrollTrigger);

      const content = document.querySelector(".h-scroll-content");
      const section = document.querySelector(".horizontal-section");

      if (!content || !section) return;

      const scrollDistance = content.scrollWidth - window.innerWidth + 250;

      // Horizontal scroll
      gsap.to(content, {
        x: -scrollDistance,
        ease: "none",
        scrollTrigger: {
          id: "scrollJobcards",
          trigger: section,
          start: "top top",
          end: `+=${scrollDistance}`,
          scrub: 1,
          pin: true,
          anticipatePin: 1,
        },
      });

      // Animate each jobcard
      gsap.from(".jobcard", {
        opacity: 0,
        y: 50,
        stagger: 0.2,
        scrollTrigger: {
          trigger: ".jobcard-row", // Or your actual row container
          start: "left center",
          horizontal: true,
          containerAnimation: ScrollTrigger.getById("scrollJobcards"),
        },
      });

      ScrollTrigger.addEventListener("refreshInit", () => window.scrollTo(0, 0));
      ScrollTrigger.refresh();
    }
  });

</script>


</html>

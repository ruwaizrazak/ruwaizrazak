---
import IndexLayout from '../layouts/IndexLayout.astro';
import { fetchMastodonPosts } from '../utils/mastodonApi';

// Fetch posts using Mastodon API
const posts = await fetchMastodonPosts('ruwaizrazak', 'mastodon.social', 20);
---

<IndexLayout
  title="Mastodon Posts"
  description="My thoughts and updates from the Fediverse"
  posts={posts}
  showCollections={false}
  showTags={false}
/>